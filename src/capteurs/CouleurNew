package capteurs;

import lejos.hardware.port.Port;
import lejos.hardware.sensor.EV3ColorSensor;
import lejos.robotics.Color;
import lejos.hardware.ev3.LocalEV3;
import lejos.robotics.SampleProvider;
import lejos.robotics.filter.MeanFilter;

public class CapteurCouleur extends EV3ColorSensor {
	private static EV3ColorSensor capteurCouleur; 
	public static float[] tab; // tableau d'echantillions de couleur
	
	public CapteurCouleur(Port port) {
		super(port);
}
	public EV3ColorSensor getCouleur() {
		return capteurCouleur;
	}
	
	public static String nomCouleur(int r, int g, int b) {
		if((r>10 && g>10 && b>10) && (r<28 && g<28 && b<28)) {
			return "GRIS";
		}else if(r>25 && g>25 && b>25) {
			return "BLANC";
		
		}else {
			return "autre";
		}
	}
}
